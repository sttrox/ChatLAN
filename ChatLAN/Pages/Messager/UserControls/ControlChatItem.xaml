<UserControl x:Class="ChatLAN.Pages.Messager.UsecControls.ControlChatItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ChatLAN.Pages.Messager.UsecControls"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="180">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Ellipse Grid.RowSpan="2" Width="42" Height="42">
            <Ellipse.Fill>
                <ImageBrush ImageSource="../../../Image/B6pW1T4c8MQ.jpg" />
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" Margin="0,2" Name="TbLogin">Name</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="10" TextTrimming="CharacterEllipsis" VerticalAlignment="Top"
                   Margin="4,2" Name="TbMessage">
            Последние сообщение отпровителя
        </TextBlock>

    </Grid>
</UserControl>