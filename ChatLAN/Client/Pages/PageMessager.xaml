<Page x:Class="ChatLAN.Client.Pages.PageMessager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:userControls1="clr-namespace:ChatLAN.Client.Pages.UserControls"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMessager">
    <Grid Background="AntiqueWhite">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="PanelMessage" />
        </ScrollViewer>
        <userControls1:ControlBarSendMessage VerticalAlignment="Bottom" />
    </Grid>
</Page>